package com.example.demo.service;

import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Value;
import org.springframework.mail.javamail.JavaMailSender;
import org.springframework.stereotype.Service;

import jakarta.mail.internet.MimeMessage;
import org.springframework.mail.javamail.MimeMessageHelper;

@Service
public class EmailService {

	private final JavaMailSender mailSender;

    @Value("${spring.mail.username}")
    private String from;

    public EmailService(JavaMailSender mailSender) {
        this.mailSender = mailSender;
    }
    public void sendOrderSuccessEmail(
            String to,
            long orderId,
            String customerName,
            String phone,
            String addressText,
            String paymentMethod,
            String note,
            String totalFormatted,
            List<Map<String, Object>> items 
    ) {
        try {
            MimeMessage message = mailSender.createMimeMessage();
            MimeMessageHelper helper = new MimeMessageHelper(message, "UTF-8");

            helper.setFrom(fromEmail);
            helper.setTo(to);
            helper.setSubject("‚úÖ ƒê·∫∑t h√†ng th√†nh c√¥ng - M√£ ƒë∆°n #" + orderId);

            String html = buildOrderSuccessHtml(orderId, customerName, phone, addressText,
                    paymentMethod, note, totalFormatted, items);

            helper.setText(html, true);
            mailSender.send(message);
        } catch (Exception e) {
            System.err.println("[MAIL] Failed to send order email: " + e.getMessage());
        }
    }

    private String buildOrderSuccessHtml(long orderId, String customerName, String phone,
                                         String addressText, String paymentMethod, String note,
                                         String totalFormatted, List<Map<String, Object>> items) {

        StringBuilder rows = new StringBuilder();
        for (Map<String, Object> it : items) {
            rows.append("<tr>")
                .append("<td style='padding:8px;border-bottom:1px solid #eee;'>")
                .append(escape((String) it.get("name")));
            String v = (String) it.get("variantInfo");
            if (v != null && !v.isBlank()) {
                rows.append("<div style='color:#666;font-size:12px;'>")
                    .append(escape(v))
                    .append("</div>");
            }
            rows.append("</td>")
                .append("<td style='padding:8px;border-bottom:1px solid #eee;text-align:center;'>")
                .append(it.get("qty"))
                .append("</td>")
                .append("<td style='padding:8px;border-bottom:1px solid #eee;text-align:right;'>")
                .append(it.get("priceFormatted"))
                .append("</td>")
                .append("<td style='padding:8px;border-bottom:1px solid #eee;text-align:right;'>")
                .append(it.get("lineTotalFormatted"))
                .append("</td>")
                .append("</tr>");
        }

        return """
        <div style="font-family:Arial,sans-serif;max-width:680px;margin:auto;">
          <h2 style="margin:0 0 8px 0;">üéâ ƒê·∫∑t h√†ng th√†nh c√¥ng</h2>
          <p style="margin:0 0 16px 0;">C·∫£m ∆°n b·∫°n ƒë√£ mua h√†ng. M√£ ƒë∆°n: <b>#%d</b></p>

          <div style="background:#f7f7f7;border-radius:10px;padding:12px 14px;margin:12px 0;">
            <div><b>Kh√°ch h√†ng:</b> %s</div>
            <div><b>SƒêT:</b> %s</div>
            <div><b>ƒê·ªãa ch·ªâ:</b> %s</div>
            <div><b>Thanh to√°n:</b> %s</div>
            %s
          </div>

          <table style="width:100%%;border-collapse:collapse;">
            <thead>
              <tr>
                <th style="text-align:left;padding:8px;border-bottom:2px solid #ddd;">S·∫£n ph·∫©m</th>
                <th style="text-align:center;padding:8px;border-bottom:2px solid #ddd;">SL</th>
                <th style="text-align:right;padding:8px;border-bottom:2px solid #ddd;">ƒê∆°n gi√°</th>
                <th style="text-align:right;padding:8px;border-bottom:2px solid #ddd;">Th√†nh ti·ªÅn</th>
              </tr>
            </thead>
            <tbody>
              %s
            </tbody>
          </table>

          <div style="text-align:right;margin-top:14px;font-size:16px;">
            <b>T·ªïng c·ªông:</b> <span style="font-size:18px;">%s</span>
          </div>

          <p style="color:#777;font-size:12px;margin-top:18px;">
            N·∫øu b·∫°n kh√¥ng th·ª±c hi·ªán ƒë∆°n h√†ng n√†y, vui l√≤ng b·ªè qua email.
          </p>
        </div>
        """.formatted(
            orderId,
            escape(customerName),
            escape(phone),
            escape(addressText),
            escape(paymentMethod),
            (note != null && !note.isBlank()) ? "<div><b>Ghi ch√∫:</b> " + escape(note) + "</div>" : "",
            rows.toString(),
            totalFormatted
        );
    }

    private String escape(String s) {
        if (s == null) return "";
        return s.replace("&","&amp;").replace("<","&lt;").replace(">","&gt;")
                .replace("\"","&quot;").replace("'","&#39;");
    }
}
